    <header>
      <hgroup>
        <h1><a href="<%= @site.url %>"><%- @site.title %></a></h1>
      </hgroup>
      <nav>
        <ul>
          <%- @partial('menuitem', {title: 'Home', url: '/'}) %>
          <%- @partial('menuitem', {title: 'Books'}) %>
          <%- @partial('menuitem', {title: 'Games'}) %>
          <%- @partial('menuitem', {title: 'Activities'}) %>
          <%- @partial('menuitem', {title: 'FAQ'}) %>
          <%- @partial('menuitem', {title: 'Contact'}) %>
        </ul>
      </nav>
    </header>
    
    <article>
      <%- @content %>
    </article>
    
    <footer>
      <p>Â© 2014 Peter J Davidson</p>
    </footer>
  </div>

  <%- @getBlock('scripts').add(@site.scripts).toHTML() %>
